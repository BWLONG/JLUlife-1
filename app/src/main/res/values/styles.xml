<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomActionBarTheme" parent="AppTheme.Base.NoActionBar"></style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
<!--
        <item name="android:windowNoTitle">true</item>
-->
        <!-- Actionbar color -->
        <item name="colorPrimary">#2196f3</item>
        <!--Status bar color-->
        <item name="colorPrimaryDark">#3f51b5</item>
        <item name="android:popupMenuStyle">@style/PopMenu</item>
        <item name="android:windowBackground">@color/foreground_material_dark</item>
    </style>


    <style name="AppTheme.Base.NoActionBar">
        <!-- Both of these are needed -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PopMenu" parent="Widget.AppCompat.Light.PopupMenu.Overflow">

    </style>
</resources>
